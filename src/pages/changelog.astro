---
import '@v1/styles/page-roadmap.css';
import { getCollectionEntry } from '@utils/collectionUtils';

import Layout from '@layouts/Layout.astro';
import Hero from '@components/Hero.astro';
import Footer from '@components/Footer.astro';
import Card from '@components/changelog/Card.astro';
import Skeleton from '@components/changelog/Skeleton.astro';
import Bullet from '@v1/assets/icons/bullet.svg';

const page = await getCollectionEntry('pages', 'changelog');

// SEO
const fm = page.data;
const meta = fm.meta || {};
const title = fm.title;
const description = fm.description;
---

<Layout title={title} description={description} bodyClass="changelog-page" meta={meta}>
  <section class="datum-container">
    <Hero class="dark" iconName={fm.iconName} title={title} subtitle={fm.subtitle} />

    <div id="roadmap" class="section--block pt-12 lg:pt-16">
      <div class="section--block-inner max-w-306">
        <div class="display-card bg-glacier-mist-700 text-midnight-fjord">
          <div class="display-card--content">
            <ul class="display-card--list display-card--timeline">
              <Card server:defer>
                <Skeleton slot="fallback" />
              </Card>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <Footer />
  </section>
</Layout>
