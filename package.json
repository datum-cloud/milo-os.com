{
  "name": "milo-os.com",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev:astro": "astro dev --host --typecheck",
    "build:astro": "astro check --skip-playwright && astro build",
    "dev": "npm run dev:astro",
    "build": "npm run build:astro",
    "start": "node ./dist/server/entry.mjs",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro,.md,.mdx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.astro,.md,.mdx --fix",
    "lint:md": "npx markdownlint-cli \"src/content/**/*.{md,mdx}\"",
    "lint:md:fix": "npx markdownlint-cli \"src/content/**/*.{md,mdx}\" --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,astro,md,mdx,json,css,scss}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,astro,md,mdx,json,css,scss}\"",
    "prepare": "husky",
    "typecheck": "astro check",
    "precommit": "npm run typecheck && npm run lint && npm run lint:md && npm run lint:md:fix && npm run format && npm run format:check"
  },
  "dependencies": {
    "@astrojs/alpinejs": "^0.4.9",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/node": "^9.5.3",
    "@lucide/astro": "^0.563.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/alpinejs": "^3.13.11",
    "alpinejs": "^3.15.8",
    "astro": "^5.17.2",
    "astro-breadcrumbs": "^3.3.3",
    "astro-seo": "^1.1.0",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.19",
    "lenis": "^1.3.17",
    "mermaid": "^11.12.2",
    "octokit": "^5.0.5",
    "openid-client": "^6.8.2",
    "postgres": "^3.4.8",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^10.0.1",
    "@types/node": "^24.10.13",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-mdx": "^3.6.2",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-arm64-gnu": "4.57.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "npm run typecheck",
      "npm run lint",
      "npm run format:check"
    ],
    "*.{md,mdx}": [
      "npm run lint:md",
      "npm run lint:md:fix"
    ],
    "*.{json,css,scss}": [
      "npm run format:check",
      "npm run format"
    ]
  }
}
